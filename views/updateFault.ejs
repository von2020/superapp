
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<meta http-equiv="X-UA-Compatible" content="ie=edge">
	<title>Telnet SuperApp</title>
	<!-- core:css -->
	<link rel="stylesheet" href="../../../assets/vendors/core/core.css">
	<!-- endinject -->
	<!-- plugin css for this page -->
	<!-- end plugin css for this page -->
	<!-- inject:css -->
	<link rel="stylesheet" href="../../../assets/fonts/feather-font/css/iconfont.css">
	<link rel="stylesheet" href="../../../assets/vendors/flag-icon-css/css/flag-icon.min.css">
	<!-- endinject -->
  <!-- Layout styles -->  
	<link rel="stylesheet" href="../../../assets/css/demo_1/style.css">
  <!-- End layout styles -->
  <link rel="shortcut icon" href="../../../assets/images/favicon.png" />

  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>  
</head>
<body>
	<div class="main-wrapper">

        <!-- Insert the sidebar partial here-->
        <% if (userDetails.role == 'Staff') { %>
			<%- include('./bars/sidebar_staff') %>
			<% } else if (userDetails.role == 'Supervisor') { %>
			<%- include('./bars/sidebar_sup') %>
			<% } else if (userDetails.role == 'Auditor') { %>
			<%- include('./bars/sidebar_auditor') %>
			<% } else if (userDetails.role == 'Finance') { %>
			<%- include('./bars/sidebar_finance') %>  
			<%  } else if (userDetails.role == 'Driver Admin') { %>
			<%- include('./bars/sidebar_driver') %>  
			<%  } else if (userDetails.role == 'Driver') { %>
			<%- include('./bars/sidebar_carDriver') %>
			<%  } else if (userDetails.role == 'Director') { %>
			<%- include('./bars/sidebar_director') %>
			<%  } else if (userDetails.role == 'Group Managing Direc') { %>
			<%- include('./bars/sidebar_gmd') %>  
			<%  } else { %>
			<%- include('./bars/sidebar') %>    
			<%  } %>
	
		<div class="page-wrapper">
				
        <!-- partial:partials/_navbar.html, this represents the topbar bar -->
        <%- include('./bars/topbar') %>
        <!-- partial -->

			<div class="page-content">
                <%- include('./partials/messages')%>
								
				<div class="row">
					<div class="col-md-12 grid-margin stretch-card">
						<div class="card">
							<div class="card-body">
								<h6 class="card-title">Update Fault</h6>

                               <form class="" action="/facilities/updateFault" method="post">
                                  
								<div class="table-responsive">
                                    <table class="table">

                                        <thead>
                                            <tr>
                                                <th> Value </th>
                                                <th> Description </th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <th> Driver Name </th>
                                                <td> <%= faults.driver_name%> </td>
                                            </tr>
											<tr>
                                                <th> Driver Phone </th>
                                                <td> <%= faults.driver_phone%> </td>
                                            </tr>
                                            <tr>
                                                <th> Vehicle Info </th>
                                                <td> <%= faults.vehicle_info%> </td>
                                            </tr>

                                            <tr>
                                                <th> Vehicle Plate </th>
                                                <td> <%=faults.vehicle_plate%> </td>
                                            </tr>

                                            <tr>
                                                <th>Fault Name</th>
                                                <td> <%=faults.fault_name%> </td>
                                            </tr>

											<tr>
                                                <th>Ticket</th>
                                                <td> <%=faults.ticket%> </td>
                                            </tr>

                                            
                                            
                                            <tr>
                                                <th> Vehicle Location </th>
                                                <td> <%= faults.vehicle_location%> </td>
                                            </tr>
                                            
                                            <tr>
                                                <th> Fault Date </th>
                                                <td> <%= faults.fault_date%> </td>
                                            </tr>
                                            
                                            
                                            
                                            <tr>
                                                <th> Created On </th>
                                                <td> <%=faults.created_on%> </td>
                                            </tr>
                                            
                                            <tr>
                                                <th> Updated On </th>
                                                <td> <%= faults.updated_on%> </td>
                                            </tr>
                                            
                                            
                                            
                                            <tr>
                                                <th> Fault Date </th>
                                                <td> <input name= "fault_date" type="date" class="form-control" id="fault_date" value="<%= faults.fault_date %>" readonly> </td>
                                            </tr>
                                            
                                            <tr>
                                                <th> Rectifiable? </th>
                                                <td> <select name= "rectifiable" class="form-control" id="rectifiable"  required>
													<option disabled>----</option>
													<option value="True">Yes</option>
													<option value="False">No</option>
												</select></td>
                                            </tr>
                                            
                                            <tr>
                                                <th> Rectifiable Comment </th>
                                                <td> <textarea name= "rectifiable_comment" class="form-control" id="rectifiable_comment" rows="10"  required></textarea> </td>
                                            </tr>
                                            
                                        </tbody>
                                        

                                        <!-- you may need to come back to change the outlook of the table to make it a two column table-->
                                    </table>
                                    <br>
                                    <br>
                                    
                                    
                                    <input type="hidden" name="created_by" class="form-control" id="created_by" value="<%=userDetails.first_name + ' ' + userDetails.last_name%>" required>

                                    
                                    
                                </div>







                                    
									  
									  <div class="row">
                                        
										<div class="col">
                                            <div class="form-group">
                                                
                                                <input type="hidden" name= "vehicle" class="form-control" id="vehicle" value="<%= faults.vehicle_id %>" required> 
                                            </div>
                                        </div>
                                        <div class="col">
                                            <div class="form-group">
                                                
                                                <input type="hidden"  name= "driver" class="form-control" id="driver" value="<%= faults.driver_id %>" required> 
                                            </div>
                                        </div>
                                        
                                    </div>
                                    <div class="col">
                                        <div class="form-group">
                                            
                                            <input type="hidden"  name= "fault" class="form-control" id="fault" value="<%= faults.id %>" required> 
                                        </div>
                                    </div>
                            	  
								<!-- need to come back here to add the list of all the subsidiaries and uplines in case it needs to be changed, just copy from the old registration page-->
									<button class="btn-lg btn-primary" type="submit">Save</button>
									
								</form>
								
							</div>
						</div>
					</div>
				</div>

			</div>
			
			<!-- partial:partials/_footer.html -->
            <%- include('./bars/footer') %>
			<!-- partial -->
	
		</div>
	</div>

	<!-- core:js -->
	<script src="../../../assets/vendors/core/core.js"></script>
	<!-- endinject -->
	<!-- plugin js for this page -->
	<!-- end plugin js for this page -->
	<!-- inject:js -->
	<script src="../../../assets/vendors/feather-icons/feather.min.js"></script>
	<script src="../../../assets/js/template.js"></script>
	<!-- endinject -->
	<!-- custom js for this page -->
	<script src="../../../assets/js/file-upload.js"></script>
	<!-- end custom js for this page -->
</body>
</html>