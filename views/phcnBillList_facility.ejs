<body>
	<div class="main-wrapper">

<!-- Insert the sidebar partial here-->
<% if (userDetails.role == 'Staff') { %>
  <%- include('./bars/sidebar_staff') %>
  <% } else if (userDetails.role == 'Supervisor') { %>
  <%- include('./bars/sidebar_sup') %>  
  <% } else if (userDetails.role == 'Auditor') { %>
  <%- include('./bars/sidebar_auditor') %> 
  <% } else if (userDetails.role == 'Finance') { %>
  <%- include('./bars/sidebar_finance') %>
  <% } else if (userDetails.role == 'Procurement') { %>
  <%- include('./bars/sidebar_procurement') %>
  <% } else if (userDetails.role == 'Facility Officer') { %>
  <%- include('./bars/sidebar_facility') %>
  <%  } else if (userDetails.role == 'Driver Admin') { %>
  <%- include('./bars/sidebar_driver') %>  
  <%  } else if (userDetails.role == 'Director') { %>
  <%- include('./bars/sidebar_director') %>
  <%  } else if (userDetails.role == 'Group Managing Director') { %>
  <%- include('./bars/sidebar_gmd') %>  
  <%  } else if (userDetails.role == 'Driver') { %>
  <%- include('./bars/sidebar_carDriver') %>  
  <%  } else { %>
  <%- include('./bars/sidebar') %>    
  <%  } %>
		<!-- partial -->
	
		<div class="page-wrapper">
				
			<!-- partial:partials/_navbar.html, this represents the topbar bar -->
      <%- include('./bars/topbar') %>
			<!-- partial -->

			<div class="page-content">
        <%- include('./partials/messages')%>
				<nav class="page-breadcrumb">
					<ol class="breadcrumb">
						<li class="breadcrumb-item"><a href="#">PHCN</a></li>
						<li class="breadcrumb-item active" aria-current="page">Bill LIst</li>
					</ol>
        </nav>


				<div class="row">
					<div class="col-md-12 grid-margin stretch-card">
            <div class="card card-special">
              <div class="card-body">
                <div class="row justify-content-between">
                  <div>
                  <h6 class="card-title d-block">PHCN Bill List</h6>
                  <!-- <p class="card-description d-block">Latest Request (Showing 01 to 08 of 48 Tickets)</p> -->
                  </div>

                </div>
                <div class="table-responsive">
                  <table id="dataTableExample" class="table" data-order=''>
                    <thead>

                      <tr>
                        <th>Consumption Rate</th>
                        <th>Unit Consumed</th>
                        <th>Amount Due</th>
                        <th>Admin Approval</th>
                        <th> Payment Status </th>
                        <th> Received Payment </th>
                        <th> Created By </th>
                        
                        <th> View </th>
                        <th>Payment Update</th>
                        
                        
                      </tr>
                    </thead>
                    <tbody>
                      
                    <!-- here you have to come back to add the pill thing to this page if it is accepted pending or rejected-->

                    <% gens.forEach((item) => {%>
                        <tr>
                          <td><%= item.consumption_rate%></td>
                          <td><%= item.unit_consumed%></td>
                          <td><%= item.amount_due%></td>
                          <td><%= item.admin_approval%></td>
                          <td><%= item.payment_status%></td>
                          <td><%= item.received_payment%></td>
                          <td><%= item.created_on.slice(0,10)%></td>
                          
                          <td> <a href="/facilities/viewPhcnBill?id=<%= item.id%>" id='<%= item.id%>' class="btn btn-sm btn-success rounded-pill" type="submit" > View </td>

                            <% if (item.payment_status == 'Money has been released.' && item.received_payment == 'no' ) { %>
                              <td><a href="/facilities/receivedPayment_facility?id=<%=item.id%>" id='<%=item.id%>' class="btn btn-sm btn-warning rounded-pill" >receive payment</a></td>
                            <% }  else if (item.payment_status == 'Money has been released.' && item.received_payment == 'yes'  ){ %>
                              <td><a  class="badge badge-primary"> Payment Received</a></td>
                            <% }  else if (item.payment_status == 'The money has not been released yet!' && item.received_payment == 'no' ){ %>
                              <td><a  class="badge badge-primary"> Payment Not Sent</a></td>
                            <% }  else { %>
                              <td><a  class="badge badge-danger"> Payment Rejected</a></td>
                            <% }%>
                        </tr>
                        <% })%>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
					</div>
				</div>

			</div>

			<!-- partial:partials/_footer.html -->
      <%- include('./bars/footer') %>
			<!-- partial -->
	
		</div>
	</div>

