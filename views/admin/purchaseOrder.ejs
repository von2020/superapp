                                <div class="table-responsive">
                                    <table  class="table">

                                        <thead>
                                            <tr>
                                                <th> Value </th>
                                                <th> Description </th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <th> Purpose </th>
                                                <td> <%= diesel.purpose%> </td>
                                            </tr>

                                            <tr>
                                                <th> Created By </th>
                                                <td> <%= diesel.created_by%> </td>
                                            </tr>

                                            <tr>
                                                <th> Created On </th>
                                                <td> <%= diesel.created_on%> </td>
                                            </tr>

                                            <tr>
                                                <th> Updated On </th>
                                                <td> <%= diesel.updated_on%> </td>
                                            </tr>
                                            <tr>
                                                <th> Liters </th>
                                                <td> <input  name="liters" class="form-control" id="liters"  required> </td>
                                            </tr>
                                            <tr>
                                                <th> Delivery Date </th>
                                                <td> <input type="date"  name="delivery_date" class="form-control" id="delivery_date" value="2021-01-01"  required> </td>
                                            </tr>

                                            <tr>
                                                <th>Delivery Destination</th>
                                                <td> <textarea name="delivery_destination" type="date" value="2021-01-01" class="form-control" id="delivery_destination" required></textarea> </td>
                                            </tr>
                                            
                                            
                                        </tbody>
                                        

                                        <!-- you may need to come back to change the outlook of the table to make it a two column table-->
                                    </table>
                                    <br>
                                    <br>
                                    <input type="hidden" name="request_quotation" class="form-control" id="request_quotation" value="<%=diesel.id%>" required>
                                    
                                    <input type="hidden" name="created_by" class="form-control" id="created_by" value="<%=userDetails.first_name + ' ' + userDetails.last_name%>" required>

                                    <input type="hidden" name="advance_payment" class="form-control" id="advance_payment" value="<%diesel.advance_payment%>" required>

                                    
                                    
                                </div>
                                <button class="btn-lg btn-primary" type="submit">Save</button>
                            </form>
                            </div>
                        </div>
                    </div>
