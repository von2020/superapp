
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<meta http-equiv="X-UA-Compatible" content="ie=edge">
	<title>Telnet SuperApp</title>
	<!-- core:css -->
	<link rel="stylesheet" href="../../../assets/vendors/core/core.css">
	<!-- endinject -->
	<!-- plugin css for this page -->
	<!-- end plugin css for this page -->
	<!-- inject:css -->
	<link rel="stylesheet" href="../../../assets/fonts/feather-font/css/iconfont.css">
	<link rel="stylesheet" href="../../../assets/vendors/flag-icon-css/css/flag-icon.min.css">
	<!-- endinject -->
  <!-- Layout styles -->  
	<link rel="stylesheet" href="../../../assets/css/demo_1/style.css">
  <!-- End layout styles -->
  <link rel="shortcut icon" href="../../../assets/images/favicon.png" />

  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>  
</head>
<body>
	<div class="main-wrapper">

        <!-- Insert the sidebar partial here-->
		<% if (userDetails.role == 'Staff') { %>
			<%- include('./bars/sidebar_staff') %>
			<% } else if (userDetails.role == 'Supervisor') { %>
			<%- include('./bars/sidebar_sup') %>
			<% } else if (userDetails.role == 'Procurement') { %>
			<%- include('./bars/sidebar_procurement') %>
			<% } else if (userDetails.role == 'Auditor') { %>
			<%- include('./bars/sidebar_auditor') %> 
			<% } else if (userDetails.role == 'Finance') { %>
			<%- include('./bars/sidebar_finance') %> 
			<%  } else if (userDetails.role == 'Driver Admin') { %>
			<%- include('./bars/sidebar_driver') %>  
			<%  } else if (userDetails.role == 'Driver') { %>
			<%- include('./bars/sidebar_carDriver') %>
			<%  } else if (userDetails.role == 'Director') { %>
			<%- include('./bars/sidebar_director') %>
			<%  } else if (userDetails.role == 'Group Managing Direc') { %>
			<%- include('./bars/sidebar_gmd') %>  
			<%  } else { %>
			<%- include('./bars/sidebar') %>    
			<%  } %>
	
		<div class="page-wrapper">
				
        <!-- partial:partials/_navbar.html, this represents the topbar bar -->
        <%- include('./bars/topbar') %>
        <!-- partial -->

			<div class="page-content">
				<%- include('./partials/messages')%>
				<nav class="page-breadcrumb">
					<ol class="breadcrumb">
						<li class="breadcrumb-item"><a href="#">Facilities</a></li>
						<li class="breadcrumb-item active" aria-current="page">  Add Vehicle</li>
					</ol>
				</nav>
				
				<div class="row">
					<div class="col-md-12 grid-margin stretch-card">
						<div class="card">
							<div class="card-body">
								<h6 class="card-title">Vehicle</h6>

								
								<form class="" action="/facilities/addVehicle" method="post">
                                    <div class="form-group">
										<label for="exampleFormControlSelect1">Plate/Registration Number</label>
                                        <input name= "plate" class="form-control" id="plate" placeholder="KJA 100 XB" required>
									</div>

                                    <div class="form-group">
										<label for="exampleFormControlSelect1">Type</label>
										<select class="form-control-lg"  name= "type" class="form-control" id="type" required>
											<option selected disabled> ---</option>
											<option value = "wagon">Wagon</option>
											<option value = "salon"> Salon</option>
											<option value = "suv">SUV</option>
											<option value = "bus"> Luxurious Bus</option>
											<option value = "van">Van/Pickup</option>
										</select>
									</div>

									<div class="form-group">
										<label for="exampleFormControlSelect1">Chasis Number</label>
                                        <input name= "chasis" class="form-control" id="chasis" placeholder="Doe" required>
									</div>

									<div class="form-group">
										<label for="exampleFormControlSelect1">Identification Number</label>
                                        <input name= "vin" class="form-control" id="vin" placeholder="E43R5T6YU789IUO09" required>
									</div>

									<div class="form-group">
										<label for="exampleFormControlSelect1">Brand</label>
                                        <input name= "vmake" class="form-control" id="vmake" placeholder="Toyota" required>
									</div>

									<div class="form-group">
										<label for="exampleFormControlSelect1">Model</label>
                                        <input name= "vmodel" class="form-control" id="vmodel" placeholder="Hiace" required>
									</div>

									<div class="form-group">
										<label for="exampleFormControlSelect1">Colour</label>
                                        <input name= "vcolor" class="form-control" id="vcolor" placeholder="white" required>
									</div>
                                    
									<div class="form-group">
										<label for="exampleFormControlSelect1">Fuel Type</label>
										
										<select class="form-control-lg"  name= "fuel_type" class="form-control" id="fuel_type" required>
											<option selected disabled> ---</option>
											<option value = "petrol"> Petrol</option>
											<option value = "diesel">Diesel</option>
										</select>
                                    </div>
									<div class="form-group">
										<label for="exampleFormControlSelect1">Purchase Date</label>
										<input name= "purchase_date" type="date" value="2020-01-01" class="form-control" id="purchase_date" placeholder="white" required>
										
                                    </div>

									<div class="form-group">
										<label for="exampleFormControlSelect1">Next Servicing Date</label>
										<input name= "next_servicing_date" type="date" value="2020-01-01" class="form-control" id="next_servicing_date" placeholder="white" required>
										
                                    </div>
                                    
                                    <div class="form-group">
										<label for="exampleFormControlSelect1">Driver</label>
										<select class="form-control-lg"  name= "driver" class="form-control" id="driver" required>
										<option selected disabled> ---</option>
										<% drivers.forEach((driver) => { %>
											<option value = "<%= driver.id%>"> <%= driver.first_name + ' ' + driver.last_name%> </option>
										<% }) %>
										</select>
									</div>

								
									<button class="btn-lg btn-primary" type="submit">Submit request</button>
								</form>
							</div>
						</div>
					</div>
				</div>

			</div>

			<!-- partial:partials/_footer.html -->
            <%- include('./bars/footer') %>
			<!-- partial -->
	
		</div>
	</div>
	<script>
        document.getElementById("purchase_date").valueAsDate = new Date()
        document.getElementById("next_servicing_date").valueAsDate = new Date()
    </script>
	<!-- core:js -->
	<script src="../../../assets/vendors/core/core.js"></script>
	<!-- endinject -->
	<!-- plugin js for this page -->
	<!-- end plugin js for this page -->
	<!-- inject:js -->
	<script src="../../../assets/vendors/feather-icons/feather.min.js"></script>
	<script src="../../../assets/js/template.js"></script>
	<!-- endinject -->
	<!-- custom js for this page -->
	<script src="../../../assets/js/file-upload.js"></script>
	<!-- end custom js for this page -->
</body>
</html>